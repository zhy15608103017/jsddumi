{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */ 
        "declarationDir": "./types", /* '.d.ts' 文件输出目录 */ 
        "emitDeclarationOnly": false, /* 只生成声明文件，不生成 js 文件*/ 
        "rootDir": "./src", /* 指定输出文件目录（用于输出），用于控制输出目录结构 */ 
        "baseUrl": ".",
        "strictNullChecks": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "target": "ES6",
        "lib": [
          "dom",
          "es2017"
        ],
        "skipLibCheck": true,
        "outDir": "es",
        "strict": true,
        "noImplicitAny": false,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx", "./src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**.d.ts"
    ]
}
