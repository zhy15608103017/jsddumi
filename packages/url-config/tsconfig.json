{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "baseUrl": ".",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "types",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx", "src/Intl/index.js"   
    ],
    "exclude": [
        "node_modules",
        "**.d.ts"
    ],
    "allowSyntheticDefaultImports": true

}
